<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jdbc="http://www.springframework.org/schema/jdbc"
	xsi:schemaLocation="http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd      http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc-3.0.xsd">
	<!-- enable transaction demarcation with annotations -->
	<tx:annotation-driven />
	<bean id="bgrimmDS" class="com.mchange.v2.c3p0.ComboPooledDataSource"
		p:driverClass="net.sourceforge.jtds.jdbc.Driver"
		p:jdbcUrl="jdbc:jtds:sqlserver://172.16.3.12:1433;DatabaseName=BGRIMMDB"
		p:user="sa" p:password="trimble" />
	<bean id="t4ddbDS" class="com.mchange.v2.c3p0.ComboPooledDataSource"
		p:driverClass="net.sourceforge.jtds.jdbc.Driver"
		p:jdbcUrl="jdbc:jtds:sqlserver://172.16.3.12:1433;DatabaseName=T4DDB"
		p:user="sa" p:password="trimble" />
	<!-- Proxy DataSource -->
	<bean id="dataSource" class="org.bgrimm.common.datasource.DynamicDataSource">
		<property name="targetDataSources">
			<map key-type="java.lang.String">
				<entry value-ref="bgrimmDS" key="BGRIMMDB"></entry>
				<entry value-ref="t4ddbDS" key="T4DDB"></entry>
			</map>
		</property>
		<property name="defaultTargetDataSource" ref="bgrimmDS"></property>
	</bean>
	<!-- <bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource"
		p:driverClass="net.sourceforge.jtds.jdbc.Driver" p:jdbcUrl="jdbc:jtds:sqlserver://172.16.3.11:1433;DatabaseName=BGRIMMDB"
		p:user="sa" p:password="trimble" p:checkoutTimeout="5000" />
		-->
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
		<property name="dataSource" ref="bgrimmDS" />
		<property name="packagesToScan">
			<list>
				<value>org.bgrimm.domain.system</value>
				<value>org.bgrimm.domain.bgrimm</value>
				
			</list>
		</property>
		<!-- <property name="annotatedClasses"> <value>org.bgrimm.domain.Menu</value> 
			</property> -->
		<property name="hibernateProperties">
			<value>
				hibernate.dialect=org.hibernate.dialect.SQLServerDialect
				hibernate.show_sql=true
				format_sql=true
				hibernate.hbm2ddl.auto=validate
			</value>
		</property>
	</bean>
	<bean class="org.springframework.transaction.support.TransactionTemplate">
		<property name="transactionManager"
			ref="txManager2" />
	</bean>
	<bean id="sessionFactory2"
		class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
		<property name="dataSource" ref="t4ddbDS" />
		<!-- <property name="annotatedClasses"> <value>org.bgrimm.domain.Menu</value> 
			</property> -->
		<property name="packagesToScan">
			<list>
				<value>org.bgrimm.domain.t4ddb</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<value>
				hibernate.dialect=org.bgrimm.utils.MySQLServerDialect
				hibernate.show_sql=true
				format_sql=true
				hibernate.hbm2ddl.auto=validate
			</value>
		</property>
	</bean>
	

	<bean id="transactionManager"
		class="org.springframework.orm.hibernate4.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	
	<bean id="txManager2"
		class="org.springframework.orm.hibernate4.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory2" />
	</bean>
	
	<!--
		<bean id="txManager" class="org.springframework.transaction.jta.JtaTransactionManager" /> 
		-->
	<context:component-scan base-package="org.bgrimm.service" />
	<context:component-scan base-package="org.bgrimm.persistence" />
	
	<!--
		<jdbc:initialize-database data-source="bgrimmDS">
			<jdbc:script location="classpath:database/sqlserver.sql"/>
		</jdbc:initialize-database>
-->
</beans>
